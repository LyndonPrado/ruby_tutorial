<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Lato|Roboto&display=swap" rel="stylesheet"> 
    <meta name="keywords" content="<%= @seo_keywords %>" />
    <%= favicon_link_tag 'favicons/other_favicon.ico' %>
    <%= stylesheet_link_tag 'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--  start of navigation -->
  <%= render "shared/portfolio_nav" %>
  <!-- end of navigation -->
  <!-- start of masthead -->
  <%= render "shared/portfolio_masthead" unless logged_in?(:site_admin) %>
  <!-- end of masthead -->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>


    <%= render "shared/nav", location: 'top'%>
    
    <%= login_helper 'nav-link'%>

    <%= yield %>

    <!-- start of footter -->
    <%= render "shared/portfolio_footer" %>
    <!-- end of footer -->

    <%= source_helper("application") %>
  </body>
</html>
